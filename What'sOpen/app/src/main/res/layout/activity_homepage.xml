<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="16dp"
    android:paddingRight="16dp">
    <ImageView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/logo"/>
    <CheckBox android:id="@+id/foodBox"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/cafeBox"
        android:text="Food"
        android:onClick="onCheckboxClicked"
        android:gravity="center_vertical"
        android:checked="false"
        android:clickable="false"
        android:elegantTextHeight="false"
        android:textSize="20dp"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="70dp"
        android:visibility="visible" />
    <CheckBox android:id="@+id/cafeBox"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/libraryBox"
        android:text="Cafes/Coffeehouses"
        android:onClick="onCheckboxClicked"
        android:gravity="center_vertical"
        android:checked="false"
        android:clickable="false"
        android:elegantTextHeight="false"
        android:textSize="20dp"
        android:layout_marginLeft="70dp"
        android:layout_marginBottom="20dp"
        android:visibility="visible" />
    <CheckBox android:id="@+id/libraryBox"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Libraries"
        android:onClick="onCheckboxClicked"
        android:gravity="center_vertical"
        android:checked="false"
        android:clickable="false"
        android:elegantTextHeight="false"
        android:textSize="20dp"
        android:visibility="visible"
        android:layout_above="@+id/buildingBox"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="70dp"
        android:layout_marginBottom="20dp" />
    <CheckBox android:id="@+id/buildingBox"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="UIUC Buildings"
        android:onClick="onCheckboxClicked"
        android:gravity="center_vertical"
        android:checked="false"
        android:clickable="false"
        android:elegantTextHeight="false"
        android:textSize="20dp"
        android:visibility="visible"
        android:layout_above="@+id/gymBox"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="70dp"
        android:layout_marginBottom="20dp"/>
    <CheckBox android:id="@+id/gymBox"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Gyms/Rec Centers "
        android:onClick="onCheckboxClicked"
        android:gravity="center_vertical"
        android:checked="false"
        android:clickable="false"
        android:elegantTextHeight="false"
        android:textSize="20dp"
        android:visibility="visible"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="70dp"
        android:layout_marginBottom="80dp"/>
</RelativeLayout>