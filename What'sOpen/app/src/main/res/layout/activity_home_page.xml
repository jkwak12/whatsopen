<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fcf7cf">
    <ImageView
        android:id="@+id/logo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/logoyerrr"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:padding="30dp"
        android:layout_alignBottom="@+id/foodBox"
        android:layout_alignParentEnd="true" />
    <CheckBox android:id="@+id/foodBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/cafeBox"
        android:text="Food"
        android:fontFamily="sans-serif-thin"
        android:textStyle="bold"
        android:onClick="onCheckboxClicked"
        android:gravity="center_vertical"
        android:textSize="20dp"
        android:textAlignment="center"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="70dp"
        android:visibility="visible"
        android:layout_marginRight="70dp"
        android:layout_marginTop="20dp"
        android:checked="false" />
    <CheckBox android:id="@+id/cafeBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/libraryBox"
        android:text="Cafes/Coffeehouses"
        android:fontFamily="sans-serif-thin"
        android:textStyle="bold"
        android:onClick="onCheckboxClicked"
        android:gravity="center_vertical"
        android:textSize="20dp"
        android:layout_marginLeft="70dp"
        android:layout_marginBottom="20dp"
        android:visibility="visible"
        android:textAlignment="center"/>
    <CheckBox android:id="@+id/libraryBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Libraries"
        android:fontFamily="sans-serif-thin"

        android:textStyle="bold"
        android:onClick="onCheckboxClicked"
        android:gravity="center_vertical"
        android:textSize="20dp"
        android:layout_above="@+id/buildingBox"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="70dp"
        android:layout_marginBottom="20dp"
        android:textAlignment="center"/>
    <CheckBox android:id="@+id/buildingBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="UIUC Buildings"
        android:fontFamily="sans-serif-thin"
        android:textStyle="bold"
        android:onClick="onCheckboxClicked"
        android:gravity="center_vertical"
        android:textSize="20dp"
        android:layout_above="@+id/gymBox"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="70dp"
        android:layout_marginBottom="20dp"
        android:textAlignment="center"/>
    <CheckBox android:id="@+id/gymBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Gyms/Rec Centers "
        android:fontFamily="sans-serif-thin"
        android:textStyle="bold"
        android:onClick="onCheckboxClicked"
        android:gravity="center_vertical"
        android:textSize="20dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="70dp"
        android:layout_marginBottom="80dp"
        android:textAlignment="center"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Display Map"
        android:fontFamily="sans-serif-medium"
        android:id="@+id/enter"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:onClick="onButtonClicked"
        android:textAlignment="center"/>
</RelativeLayout>